<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/corners_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/average_temperature"
        android:textSize="15sp"
        android:textColor="@color/white" />

    <include layout="@layout/first_ui_info_temp"
        android:id="@+id/first_ui_info_temp">

    </include>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/average_humidity"
        android:textSize="15sp"
        android:textColor="@color/white"/>

    <include layout="@layout/first_ui_info_hum"
        android:id="@+id/first_ui_info_hum">

    </include>
</LinearLayout>